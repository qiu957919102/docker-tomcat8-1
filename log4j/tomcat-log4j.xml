<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="com.moonlit.logfaces.appenders.log4j2">

    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>
        </Console>
        <logFaces name="LFS"
            remoteHost="lfs-srv-1.intellij.net,lfs-srv-2.intellij.net"
            port="55200"
            application="update-server-mock.prod"
            locationInfo="true"
            backup="STDOUT"/>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="LFS"/>
        </Root>
    </Loggers>

</Configuration>
